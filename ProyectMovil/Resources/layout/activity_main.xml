<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff215d71">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="458.5dp"
        android:id="@+id/linearLayout1"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/folicorr"
        android:padding="30px">
        <TextView
            android:text="LICORERIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginBottom="0.0dp"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="80px" />
        <TextView
            android:text="Menos bla bla..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginBottom="0.0dp"
            android:gravity="center"
            android:textColor="@android:color/background_light" />
        <TextView
            android:text="Más glu glu..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginBottom="63.5dp"
            android:textColor="@android:color/background_light"
            android:gravity="center" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="262.0dp"
            android:id="@+id/linearLayout2"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@android:drawable/editbox_dropdown_dark_frame"
            android:layout_marginBottom="33.5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="62.0dp"
                android:id="@+id/linearLayout3"
                android:layout_marginLeft="15.5dp"
                android:layout_marginRight="14.0dp">
                <TextView
                    android:layout_width="66.0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView2"
                    android:background="@drawable/usu"
                    android:layout_marginRight="6.5dp" />
                <EditText
                    android:inputType="textMultiLine"
                    android:layout_width="252.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/editText1"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="67.5dp"
                android:id="@+id/linearLayout4"
                android:layout_marginRight="16.0dp"
                android:layout_marginLeft="14.5dp">
                <TextView
                    android:layout_width="73.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView3"
                    android:background="@drawable/pass" />
                <EditText
                    android:inputType="textMultiLine"
                    android:layout_width="252.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/editText2"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>
            <Button
                android:text="Iniciar Sesión"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_marginBottom="9.0dp"
                android:layout_marginTop="10.5dp"
                android:background="@drawable/botonlog" />
            <Button
                android:text="Registrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:background="@drawable/botonlog" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>